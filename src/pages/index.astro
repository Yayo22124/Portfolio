---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import OutlookIcon from "../components/icons/Outlook.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import GitLabIcon from "../components/icons/GitLab.astro";
import BriefCaseIcon from "../components/icons/BriefCaseIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import CvIcon from "../components/CvIcon.astro";
import TimeLine from "../components/TimeLine.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portafolio | Eli Haziel Ortiz (Yayo22124)."
  description="Portafolio de Eli Haziel Ortiz (Yayo22124). Estudiante de T.S.U y Desarrollador Web con 2 años de experiencia en proyectos didácticos."
>
  <main>
    <SectionContainer id="home">
      <div class="pb-5 flex flex-col">
        <div
          class="flex gap-3 lg:flex-row sm:flex-col-reverse flex-col-reverse md:flex-col-reverse mb-5 lg:mb-0 justify-center items-center md:justify-normal sm:justify-normal lg:items-center"
        >
          <h1
            class="lg:text-4xl md:text-3xl sm:text-2xl text-xl font-bold lg:text-balance text-wrap md:text-wrap sm:text-wrap lg:w-2/4 w-full"
          >
            Hey, soy <span class="text-sky-400/90 "
              >Eli Haziel Ortiz Ramirez</span
            >
          </h1>
          <img
            src="https://avatars.githubusercontent.com/Yayo22124"
            alt="Yayo22124 Photo"
            class="rounded-full lg:size-1/6 md:size-1/4 size-1/3"
          />
        </div>
        <div
          class="flex items-center justify-center md:justify-normal lg:justify-normal sm:justify-normal"
        >
          <a href="https://www.linkedin.com/in/haziel-ortiz/" target="_blank"
            ><Badge>Disponible para trabajar</Badge></a
          >
          <Badge class="bg-green-500 text-white">Estudiante</Badge>
          <!-- <Badge class="bg-red-500 text-white">Con novia</Badge> -->
        </div>
      </div>
      <h2 class="dark:text-blue-100/90 text-gray-800 text-md text-pretty">
        Estudiante de T.S.U. en <span class="dark:text-sky-300/90 text-sky-500 font-semibold"
          >Desarrollo de Software Multiplataforma</span
        >. 2 años de experiencia en proyectos didácticos y escolares. <span
          class="text-custom">Desarrollador Web especializado en FrontEnd</span
        >. Desde <span>México, Puebla.</span>
      </h2>

      <!-- Contact Badges -->
      <ul
        class="flex w-full flex-wrap items-center justify-center gap-5 mt-3 [&>li]:bg-gray-800/05 [&>li]:shadow-neutral-400  [&>li]:shadow dark:[&>li]:shadow-none dark:[&>li]:bg-sky-300/10 [&>li]:py-1.5 [&>li]:backdrop-blur-xl dark:[&>li]:backdrop-blur-[1.5px] [&>li]:px-2 text-sm [&>li]:rounded-xl"
      >
        <!-- LinkedIn -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="https://www.linkedin.com/in/haziel-ortiz"
            class="flex gap-2 items-center justify-center"
          >
            <LinkedInIcon class="size-6" />
            <span>LinkedIn</span>
          </a>
        </li>
        <!-- GitHub -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="https://github.com/Yayo22124"
            class="flex gap-2 items-center justify-center"
          >
            <GitHubIcon class="size-6" />
            <span>GitHub</span>
          </a>
        </li>
        <!-- GitLab -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="https://gitlab.com/Yayo22124"
            class="flex gap-2 items-center justify-center"
          >
            <GitLabIcon class="size-6" />
            <span>GitLab</span>
          </a>
        </li>
        <!-- Outlook -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="mailto:ya-yo22124@outlook.com"
            class="flex gap-2 items-center justify-center"
          >
            <OutlookIcon class="size-6" />
            <span>ya-yo22124@outlook.com</span>
          </a>
        </li>
        <!-- CV -->
        <li
          class=" transition-background inline-flex  items-center justify-center rounded-md border bg-gradient-to-r from-slate-100 via-[#c7d2fe] to-[#8678f9] bg-[length:200%_200%] bg-[0%_0%]  font-medium text-black duration-500 hover:bg-[100%_200%] focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2 focus:ring-offset-slate-50"
        >
          <a
            href="docs/Eli-Haziel-Ortiz-Ramirez-CV.pdf"
            download="Eli-Haziel-Ortiz-Ramirez-CV.pdf"
            class="flex gap-2 items-center justify-center"
          >
            <CvIcon class="size-6" />
            <span>Descargar CV</span>
          </a>
        </li>
      </ul>
    </SectionContainer>
    <!--! TimeLine Section -->
    <SectionContainer id="experience">
      <h2 class="flex items-center gap-x-2 text-3xl font-semibold mb-6">
        <BriefCaseIcon /> Mi Experiencia
      </h2>
      <TimeLine />
    </SectionContainer>

    <!-- ! Projects Section -->
    <SectionContainer id="projects">
      <h2 class="flex items-center gap-x-2 text-3xl font-semibold mb-6">
        <CodeIcon /> Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>

<style>
  .text-custom {
    text-decoration: underline wavy skyblue;
  }
</style>
