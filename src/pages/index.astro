---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import OutlookIcon from "../components/icons/Outlook.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import GitLabIcon from "../components/icons/GitLab.astro";
import BriefCaseIcon from "../components/icons/BriefCaseIcon.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import TimeLine from "../components/TimeLine.astro";
---

<Layout
  title="Portafolio | Eli Haziel Ortiz (Yayo22124)."
  description="Portafolio de Eli Haziel Ortiz (Yayo22124). Estudiante de T.S.U y Desarrollador Web con 2 años de experiencia en proyectos didácticos."
>
  <main>
    <section
      id="home"
      class="lg:w-1/2 sm:w-11/12 md:w-8/12 mx-auto pt-44 pb-28 animate-fade-right animate-once animate-duration-500 animate-delay-200 animate-ease-in"
    >
      <div class="pb-5 flex flex-col">
        <div class="flex gap-3 lg:flex-row sm:flex-col-reverse md:flex-col-reverse sm:mb-5 md:mb-4 lg:justify-center lg:items-center">
          <h1 class="text-4xl font-bold lg:text-balance md:text-wrap sm:text-wrap w-2/4 sm:w-full md:w-full">
            Hey, soy <span class="text-sky-400/90"
              >Eli Haziel Ortiz Ramirez</span
            >
          </h1>
          <img
            src="https://avatars.githubusercontent.com/Yayo22124"
            alt="Yayo22124 Photo"
            class="rounded-full size-1/6 md:size-1/4"
          />
        </div>
        <div>
          <a href="https://www.linkedin.com/in/haziel-ortiz/" target="_blank"
            ><Badge>Disponible para trabajar</Badge></a
          >
          <Badge class="bg-green-500 text-white">Estudiante</Badge>
          <!-- <Badge class="bg-red-500 text-white">Con novia</Badge> -->
        </div>
      </div>
      <h2 class="text-blue-100/90 text-md text-pretty">
        Estudiante de T.S.U. en <span class="text-sky-300/90 font-semibold"
          >Desarrollo de Software Multiplataforma</span
        >. 2 años de experiencia en proyectos didácticos y escolares. <span
          class="text-custom">Desarrollador Web especializado en FrontEnd</span
        >. Desde <span>México, Puebla.</span>
      </h2>

      <!-- Contact Badges -->
      <ul
        class="flex items-center justify-center gap-x-5 mt-3 [&>li]:bg-white/5 [&>li]:py-1.5 [&>li]:px-2 text-sm [&>li]:rounded-xl"
      >
        <!-- LinkedIn -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="mailto:ya-yo22124@outlook.com"
            class="flex gap-2 items-center justify-center"
          >
            <LinkedInIcon class="size-6" />
            <span>LinkedIn</span>
          </a>
        </li>
        <!-- GitHub -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="mailto:ya-yo22124@outlook.com"
            class="flex gap-2 items-center justify-center"
          >
            <GitHubIcon class="size-6" />
            <span>GitHub</span>
          </a>
        </li>
        <!-- GitLab -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="mailto:ya-yo22124@outlook.com"
            class="flex gap-2 items-center justify-center"
          >
            <GitLabIcon class="size-6" />
            <span>GitLab</span>
          </a>
        </li>
        <!-- Outlook -->
        <li
          class="hover:scale-110 transition hover:bg-white/10 active:scale-95 flex items-center justify-center"
        >
          <a
            href="mailto:ya-yo22124@outlook.com"
            class="flex gap-2 items-center justify-center"
          >
            <OutlookIcon class="size-6" />
            <span>ya-yo22124@outlook.com</span>
          </a>
        </li>
      </ul>
    </section>
    <!--! TimeLine Section -->
    <section
      id="experience"
      class="w-11/12 mx-auto lg:w-[740px] py-44 animate-fade-left animate-once animate-duration-500 animate-delay-200 animate-ease-in"
    >
      <h2 class="flex items-center gap-x-2 text-3xl font-semibold mb-6">
        <BriefCaseIcon/> Mi Trayectoria
      </h2>
      <TimeLine />
    </section>
  </main>
</Layout>

<style>
  .text-custom {
    text-decoration: underline wavy skyblue;
  }
</style>
